<% include ../common/header.ejs %>
<style type="text/css">
    .user-img {
        display: inline-block;
        width: 32px;
        height: 32px;
        border: 1px solid #cdcdcd;
        border-radius: 16px;
        background-color: #cdcdcd;
        text-align: center;
        margin-right: 5px;
    }

    .user-img i {
        font-size: 20px;
        line-height: 32px;
