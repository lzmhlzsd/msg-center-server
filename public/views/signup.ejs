<% include common/header_login.ejs %>
<div class="container-body">
    <div class="container">
        <div class="main-page">
            <form id="loginForm" class="signup-form">
                <h2>欢迎注册
                    <!--<a class="text-info hidden-xs" href="/user/reg"-->
                    <!--style="position: absolute; right: 0;font-size:12px;float:right;line-height: 26px;">没有账号？去注册</a>-->
                </h2>

                <div class="type-input">
                    <div class="form-group">
                        <label for="customer">个人/组织:</label>
                        <input type="text" class="form-control" id="customer" name="customer"
                               placeholder="姓名或公司名称">
                    </div>
                    <div class="form-group">
                        <label for="username">注册账号:</label>
                        <input type="text" class="form-control" id="username" name="username"
                               placeholder="请输入注册账号">
                    </div>
                    <div class="form-group">
                        <label for="pwd">密码:</label>
                        <input type="password" class="form-control" id="pwd" name="pwd"
                               placeholder="请输入密码">
                    </div>
                    <div class="form-group">
                        <label for="pwd2">再输一次密码:</label>
                        <input type="password" class="form-control" id="pwd2" name="pwd2"
                               placeholder="请再输入一次密码">
                    </div>
                    <div class="form-group">
                        <label for="phone">联系电话:</label>
                        <input type="tel" class="form-control" id="phone" name="phone"
                               placeholder="手机号码">
                    </div>
                    <div class="form-group">
                        <label for="email">邮箱:</label>
                        <input type="email" class="form-control" id="email" name="email"
                               placeholder="邮箱">
                    </div>
                    <div class="form-group last" style="margin-top: 30px;">
                        <button type="submit" class="btn btn-success btn-block next">注册</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<% include common/footer.ejs %>
<script type="text/javascript" src="/jquery-validation-1.15.0/dist/jquery.validate.min.js"></script>
<script type="text/javascript">
    $(function () {
        $('.signup-form').validate({
            errorElement: 'span',
            errorClass: 'help-block',
            focusInvalid: false,
            rules: {
                customer: {
                    required: true
                },
                username: {
                    required: true,
                    remote: {
                        type: "post",
                        url: "/checkUserName",
                        data: {
                            username: function () {
                                return $("#username").val();
                            }
                        },
                        dataType: "json",
                        dataFilter: function (data, type) {
                            data = JSON.parse(data);
                            if (data.status == '0000')
                                return true;
                            else
                                return false;
                        }
                    }
                },
                pwd: {
                    required: true
                },
                pwd2: {
                    equalTo: "#pwd"
                },
                phone: {
                    required: true
                },
                email: {
                    required: true
                }
            },
            messages: {
                customer: {
                    required: '名称不能为空!'
                },
                username: {
                    required: "账号不能为空!",
                    remote: '账号已经存在!'
                },
                pwd: {
                    required: "密码不能为空!",
                },
                pwd2: {
                    equalTo: "两次输入密码不一致!"
                },
                phone: {
                    required: '名称不能为空!'
                },
                email: {
                    required: '名称不能为空!'
                }
            },

            highlight: function (element) {
                $(element).closest('.form-group').addClass('has-error');
            },

            success: function (label) {
                label.closest('.form-group').removeClass('has-error');
                label.remove();
            },

            errorPlacement: function (error, element) {
                element.parent('div').append(error);
            },

            submitHandler: function (form) {
                $.post('/register', {
                    customer: $('#customer').val(),
                    username: $('#username').val(),
                    pwd: $('#pwd').val(),
                    phone: $('#phone').val(),
                    email: $('#email').val()
                }, function (result) {
                    if (result.status == '0000') {
                        location.href = '/';
                    }
                    else {
                        BootstrapDialog.show({
                            title: '提示',
                            message: '<i class="icon-model anticon anticon-cross-circle"></i>' +
                            '<span class="ant-confirm-title">' + result.message + '</span>',
                            type: BootstrapDialog.TYPE_DEFAULT,
                            onshow: function (dialogRef) {
                                setTimeout(function () {
                                    dialogRef.close();
                                }, 2000);
                            }
                        });
                    }
                })
            }
        });
    });
</script>